 <% form_for :advance_search do |f| %>
<%= f.text_field :student%>
<%= f.text_field :student_id %>
<%= f.select :mode, :id,
  ["Monthly", "Overall"],
  {:prompt => 'Select a mode'},
  {:onchange => "#{remote_function(
  :url => { :action => 'month' },
  :with => "'mode='+value",
  :before => "Element.show('loader')",
  :success => "Element.hide('loader')"  )}"} %>
<% unless @subject.nil? %>
<%= f.hidden_field :subject , :value=> @subject.id %>
<% end %>
<%= f.submit 'submit'  %>
<% end %>
