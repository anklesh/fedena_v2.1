<% form_remote_for :liability,
  :url => {:action => 'update_liability',:id => @liability.id} do |f| %>
  <div id="form-errors"></div>
  <div class="label-field-pair">
    <div class="label-container"><label>Title :</label> </div>
    <div class="input-container"><%= f.text_field :title%></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label>Description :</label> </div>
    <div class="text-input-bg"> <%= f.text_field :description %></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label>Amount :</label> </div>
    <div class="input-container"><%= f.text_field :amount %></div>
  </div>
  <div class="label-field-pair">
    <div class="label-container"><label>Solve this Liability? </label> </div>
    <div class="input-container"><%= f.check_box :is_solved %></div>
  </div>

  <%=  submit_tag "â–º Save",:class=>'submit_button' %>
<% end %>